<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="lighthouse-core">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="lighthouse-core"
            class="edu.uci.lighthouse.core.views.SampleView"
            id="edu.uci.lighthouse.core.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="edu.uci.lighthouse.core.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="edu.uci.lighthouse.core.preferences.LighthousePreferences"
            id="edu.uci.lighthouse.core.preferences"
            name="Lighthouse">
      </page>
      <page
            category="edu.uci.lighthouse.core.preferences"
            class="edu.uci.lighthouse.core.preferences.DatabasePreferences"
            id="edu.uci.lighthouse.core.preferences.database"
            name="Database">
      </page>
      <page
            category="edu.uci.lighthouse.core.preferences"
            class="edu.uci.lighthouse.core.preferences.UserPreferences"
            id="LighthouseCore.page3"
            name="User">
      </page>
   </extension>

</plugin>
