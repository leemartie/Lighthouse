<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="edu.uci.lighthouse.ui.figures.compartment">
      <compartment
            class="edu.uci.lighthouse.lighthouseqandathreads.ThreadFigure">
      </compartment>
   </extension>
   <extension
         point="edu.uci.lighthouse.views.ui.views.actions.pluginactions">
      <lhAction
            class="edu.uci.lighthouse.lighthouseqandathreads.actions.extensions.ForumFilterAction">
      </lhAction>
   </extension>
   

     <extension point="org.eclipse.core.resources.markers"
   id="customMarker" name="Custom Marker">
   <super type="org.eclipse.core.resources.textmarker" />
   <persistent value="true"/>
   </extension>
   
    <extension
   	point="org.eclipse.ui.ide.markerImageProviders">
   	<imageprovider
          class="edu.uci.lighthouse.lighthouseqandathreads.markers.QuestionMarkerImageProvider"
          icon="/icons/question.png"
          id="edu.uci.lighthouse.LighthouseQandAThreads.imageprovider"
          markertype="edu.uci.lighthouse.LighthouseQandAThreads.customMarker"/>   	
   	</extension> 
   	
      <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#CompilationUnitEditorContext"
            id="org.eclipse.jdt.ui.CompilationUnitEditor.EditorContext">
         <action
               label="Add Question"
               class="edu.uci.lighthouse.lighthouseqandathreads.delegates.ContextMenuDelegate"
               menubarPath="additions"
               id="edu.uci.lighthouse.lighthouseqandathreads.delegates.ContextMenuDelegate">

         </action>
      </viewerContribution> 
      
      <viewerContribution
            targetID="#CompilationUnitRulerContext"
            id="org.eclipse.jdt.ui.CompilationUnitEditor.RulerContext">
         <action
               label="Open Question Thread"
               class="edu.uci.lighthouse.lighthouseqandathreads.delegates.MarkerContextMenuDelegate"
               menubarPath="additions"
               id="edu.uci.lighthouse.lighthouseqandathreads.delegates.MarkerContextMenuDelegate">

         </action>
      </viewerContribution>
      
   </extension>
   
   <extension point="org.eclipse.ui.editors.annotationTypes">
                <type 
                                        super="org.eclipse.ui.workbench.texteditor.info"
                                        name="edu.uci.lighthouse.lighthouseqandathreads.annotation"
                                        markerType="edu.uci.lighthouse.LighthouseQandAThreads.customMarker"/>
   </extension>
   
   <extension point="org.eclipse.ui.editors.markerAnnotationSpecification"
		id="myannotationspecification" name="Lighthouse_QandA_Annotation">
	<specification annotationType="edu.uci.lighthouse.lighthouseqandathreads.annotation"
			label="Lighthouse QA Annotation"
			
			icon="icons/question.png"
			
			overviewRulerPreferenceKey="clruler"
			overviewRulerPreferenceValue="true"
			colorPreferenceKey="clcolor"
			colorPreferenceValue="231, 252, 232"
	        highlightPreferenceKey="clhighlight"
            highlightPreferenceValue="true"
			textPreferenceKey="cltext"
			textPreferenceValue="true"
			verticalRulerPreferenceKey="clvertical"
			verticalRulerPreferenceValue="true"
			textStylePreferenceKey="clstyle"
			includeOnPreferencePage="true"
			textStylePreferenceValue="BOX">
	</specification>
</extension>

<extension point="org.eclipse.ui.views">
	<view
    	class="edu.uci.lighthouse.lighthouseqandathreads.markerViews.QuestionMarkerView"
        icon="icons/question.png"
        id="edu.uci.lighthouse.lighthouseqandathreads.markerViews.QuestionMarkerView"
        name="Questions">
    </view>
</extension>

<extension point="org.eclipse.ui.ide.markerSupport">
    <markerContentGenerator
    id="edu.uci.lighthouse.lighthouseqandathreads.questionGenerator" 
    name="Question Generator">
    
    	<markerTypeReference id="edu.uci.lighthouse.LighthouseQandAThreads.customMarker"/>
    	<markerFieldReference id="org.eclipse.ui.ide.descriptionField"/>
    </markerContentGenerator>
</extension>
   

   	
</plugin>
