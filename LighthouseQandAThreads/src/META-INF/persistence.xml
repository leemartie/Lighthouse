<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="LighthousePersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.Forum</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.Post</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.Thread</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.ThreadCreator</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.TeamMember</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.Solution</class>
		<class>edu.uci.lighthouse.lighthouseqandqthreads.model.Forum</class>
		

		<properties>
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.query.substitutions" value="true=1, false=0" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />

			<!-- <property name="hibernate.show_sql" value="true" /> -->

<!--
			<property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/lighthouse" />
			<property name="hibernate.connection.username" value="lighthouse" />
			<property name="hibernate.connection.password" value="light99" />
-->
		</properties>
	</persistence-unit>
</persistence>